	<div class="profile-title" id="hoge">
		<span style="border-bottom: solid 1px black;"><b>GALLERY</b></span>
	</div>
	<div class="row">
		<div class="image">
	<% @gallerys.each do |gallery| %>
			<%= attachment_image_tag gallery, :image, format: 'jpg', size: "200" %>
		</div>
	</div>
		<% end %>
	<%= form_for(@gallery, url: gallerys_path) do |f| %>
	<div class="container">
		<label>
		<%= f.attachment_field :image %>
	</label>
		<div class="submit">
		<%= f.submit "投稿", class:"btn btn-info btn-block btn-base-1 mt-40" %>
	</div>
</div>
	<% end %>

	<script>
		$(function(){
			$("b").hover(function(){
				$("#hoge").css("color", "#DC143C")
			});
		});
	</script>